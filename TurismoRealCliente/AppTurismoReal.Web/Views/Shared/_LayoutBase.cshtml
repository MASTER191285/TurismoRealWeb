@model AppTurismoReal.Web.Models.AccountViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")  
</head>
<body>
    <!--================Banner Area =================-->
    <div class="banner-section">
        <section class="slider">
            <div class="flexslider">
                <ul class="slides">
                    <li>
                        <div class="slider-info">
                            <img src="~/Content/images/bannner/ba1.jpg" class="img-responsive" alt="">
                        </div>
                        <div class="container">
                            <div class="banner-text">
                                <h3>Outdoor & Indoor Luxury</h3>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="slider-info">
                            <img src="~/Content/images/bannner/ba2.jpg" class="img-responsive" alt="">
                        </div>
                        <div class="container">
                            <div class="banner-text">
                                <h3>Luxury & Oriental Harmony</h3>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="slider-info">
                            <img src="~/Content/images/bannner/ba3.jpg" class="img-responsive" alt="">
                        </div>
                        <div class="container">
                            <div class="banner-text">
                                <h3>A Brand New Hotel</h3>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </section>

    </div>
    <!--================Banner Menu Area =================-->
    <!--================Area Header =================-->
    <div class="header">
        <div class="container">
            <div class="header-menu">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <div class="navbar-brand logo">
                                <h1><a href="index.html"><span>Best  </span> Hotel</a></h1>
                            </div>
                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="@Url.Content("~/Home/Index")" data-hover="Home">Inicio </a></li>
                                <li><a href="" data-hover="About">Quienes Somos</a></li>
                                <li><a href="#modalIngreso" data-toggle="modal" data-dismiss="modal">Iniciar Sesion</a></li>
                                <li><a data-hover="Gallery" href="">Galeria</a></li>
                                <li><a data-hover="Rooms" href="">Reservas</a></li>
                                <li><a href="" data-hover="codes">Codes</a></li>
                                <li><a data-hover="Contact" href="">Contacto</a></li>

                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--================Area Header =================-->
    <!--================Area Body =================-->
    <div>
        @RenderBody()
    </div>
    <!--================Area Body =================-->
    <!--================Area Footer =================-->
    <div class="copy-section">
        <div class="container">
            <div class="footer-top">
                <p>&copy; 2016 Best Hotel. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
            </div>
            <div class="social-icons">
                <a href="#"><i class="icon"></i></a>
                <a href="#"><i class="icon1"></i></a>
                <a href="#"><i class="icon2"></i></a>
                <a href="#"><i class="icon3"></i></a>
            </div>
        </div>
    </div>
    <!--================Area Footer =================-->
    <!-- Modal Login-->
    <div class="modal" id="modalIngreso">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h4 class="modal-title">Ingresar</h4>
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <hr class="mt-0">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="far fa-envelope"></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(model => model.CL_Email, htmlAttributes: new { @class = "form-control", @placeholder = "Ingrese Email", @type = "email", @name = "Email" })
                    @Html.ValidationMessageFor(model => model.CL_Email, "", new { @class = "text-danger" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-unlock-alt"></i>
                        </span>
                    </div>
                    @Html.EditorFor(model => model.CL_Clave, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Ingrese Contraseña" } })
                    @Html.ValidationMessageFor(model => model.CL_Clave, "", new { @class = "text-danger" })
                </div>
                    <input type="submit" class="btn btn-dark btn-block" value="Ingresar">
                    }
                </div>
                <div class="modal-footer">
                    ¿No tiene una cuenta registrada? |
                    <strong>
                        <a href="#modalRegistro" data-toggle="modal" data-dismiss="modal">
                            Registrarse
                        </a>
                    </strong>
                </div>
            </div>
        </div>
    </div>
    <!--Fin Modal Login-->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("Scripts", required: false)
    <script defer src="~/Scripts/js/jquery.flexslider.js"></script>
    <script type="text/javascript">
        $(function () {
            SyntaxHighlighter.all();
        });
        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                start: function (slider) {
                    $('body').removeClass('loading');
                }
            });
        });
    </script>
</body>
</html>
